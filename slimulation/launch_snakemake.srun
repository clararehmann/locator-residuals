#!/bin/bash
#SBATCH --account=kernlab
#SBATCH --partition=kern
#SBATCH --job-name=snakemake_launch
#SBATCH --output=snakemake-%j.out
#SBATCH --error=snakemake-%j.err
#SBATCH --time=9-10:10:00
#SBATCH --nodes=1
#SBATCH --mem=10G

snakemake --unlock
snakemake --profile slurm --conda-frontend conda --use-conda $1
# directory might lock if things are killed?
# --latency-wait needs to wait longer for slim trees to be made
